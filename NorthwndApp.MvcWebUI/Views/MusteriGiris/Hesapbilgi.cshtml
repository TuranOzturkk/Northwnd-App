@using NorthwndApp.Model.Entities
@model Musteriler

<!DOCTYPE html>
<html lang="tr">

<head>
    <title>CSS Büyük-Küçük harf</title>
    <meta charset="utf-8">
    <style type="text/css">

        .buyukHarf {
            text-transform: uppercase;
        }
        .kucukHarf {
            text-transform: lowercase;
        }
        .ilkHarfBuyuk {
            text-transform: capitalize;
        }
    </style>
</head>

<body>

   @* <div class="buyukHarf">
        Burada büyük harf yazılacak
    </div>

    <div class="kucukHarf">
        Burada küçük harf yazılacak
    </div>

    <div class="ilkHarfBuyuk">
        Sadece ilk harf büyük yazılacak.
    </div>*@
  
    <!-- Checkout Start -->
    <div class="container-fluid">
        
        <div class="row px-xl-12">
            <div class="col-lg-8" style="margin:auto">
                <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Hesap Bilgisi</span></h5>
                <div class="bg-light p-30 mb-5">
                    <div class="row">



                        <div class="col-md-6 form-group">
                            <label>Adi</label>
                            <input class="form-control" type="text" placeholder="@Model.Adi">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Soyad</label>
                            <input class="form-control" type="text" placeholder="@Model.Soyadi">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>E-mail</label>
                            <input class="form-control" type="text" placeholder="@Model.Mail">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Telefon No</label>
                            <input class="form-control" type="text" placeholder="@Model.Telefon">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Sehir</label>
                            <input class="form-control" type="text" placeholder="@Model.Sehir">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Adres</label>
                            <input class="form-control" type="text" placeholder="@Model.Adres">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Ulke</label>

                            <input class="form-control" type="text" placeholder="@Model.Ulke">
                               
                           
                        </div>
                    </div>
                </div>
                <div class="collapse mb-5" id="shipping-address">
                    <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Shipping Address</span></h5>
                    <div class="bg-light p-30">
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <label>First Name</label>
                                <input class="form-control" type="text" placeholder="John">
                            </div>
                            <div class="col-md-6 form-group">
                                <label>Last Name</label>
                                <input class="form-control" type="text" placeholder="Doe">
                            </div>
                            <div class="col-md-6 form-group">
                                <label>E-mail</label>
                                <input class="form-control" type="text" placeholder="example@email.com">
                            </div>
                            <div class="col-md-6 form-group">
                                <label>Mobile No</label>
                                <input class="form-control" type="text" placeholder="+123 456 789">
                            </div>
                            <div class="col-md-6 form-group">
                                <label>Address Line 1</label>
                                <input class="form-control" type="text" placeholder="123 Street">
                            </div>
                            <div class="col-md-6 form-group">
                                <label>Address Line 2</label>
                                <input class="form-control" type="text" placeholder="123 Street">
                            </div>
                            <div class="col-md-6 form-group">
                                <label>Country</label>
                                <select class="custom-select">
                                    <option selected>United States</option>
                                    <option>Afghanistan</option>
                                    <option>Albania</option>
                                    <option>Algeria</option>
                                </select>
                            </div>
                            <div class="col-md-6 form-group">
                                <label>City</label>
                                <input class="form-control" type="text" placeholder="New York">
                            </div>
                            <div class="col-md-6 form-group">
                                <label>State</label>
                                <input class="form-control" type="text" placeholder="New York">
                            </div>
                            <div class="col-md-6 form-group">
                                <label>ZIP Code</label>
                                <input class="form-control" type="text" placeholder="123">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
  </div>
</body>

</html>